<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fantasycentral.app"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>FantasyCentral</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>

    <!-- Entry point -->
    <content src="index.html" />

    <!-- URL whitelisting -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="*" />
    <access origin="*" />

    <!-- Whitelist plugin -->
    <plugin name="cordova-plugin-whitelist" spec="^1.3.5" />

    <!-- iOS-specific preferences -->
    <platform name="ios">
        <!-- Enable native scrolling in WKWebView -->
        <preference name="ScrollEnabled" value="true" />
        <!-- Optional bounce (rubber-band) effect on overscroll -->
        <preference name="WKWebViewBounce" value="true" />
    </platform>

    <!-- Android-specific preferences (optional) -->
    <platform name="android">
        <!-- Enable native scrolling -->
        <preference name="ScrollEnabled" value="true" />
    </platform>

</widget>
